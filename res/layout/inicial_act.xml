<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.curriclo.app.Inicial">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                        android:orientation="vertical"
                      android:layout_marginLeft="@dimen/abc_text_size_title_material"
                      android:layout_marginRight="@dimen/abc_text_size_title_material"
                      android:layout_marginBottom="@dimen/abc_text_size_title_material"
                      android:layout_marginTop="20sp">
            <TextView
                    android:text="@string/name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                    android:textSize="@dimen/abc_text_size_medium_material"/>

        </LinearLayout>


        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                />


</LinearLayout>
